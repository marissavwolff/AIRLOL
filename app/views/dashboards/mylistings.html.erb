          <div class="col-12 col-sm-3 mb-4 rounded" data-aos="zoom-in">
            <div class="bg-white rounded shadow h-100">
              <%= image_tag cl_image_path(listing.photo.key, height: 300, crop: :fill), alt: listing.name, class: "humour-img rounded-top" %>
              <div class="p-3 rounded-bottom d-flex flex-column">
                <strong><%= link_to listing.name, listing_path(listing), class: 'text-decoration-none text-reset' %> <span class="text-muted font-weight-normal">â€¢ <i class="fa-solid fa-sterling-sign"></i><%= listing.price %></strong>
                <em><small class="text-muted"><%= listing.location %></small></em>
              </div>
            </div>
          </div>
        <% end %>
    </div>
   <%= link_to "Create new Listing", new_listing_path, class: "btn btn-primary" %>
</div>


