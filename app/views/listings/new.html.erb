<%# <% user_signed_in? %>
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
          <h3>Create you humor offer</h3>
          <%= simple_form_for @listing do |f| %>
            <%# <%= f.input :name, placeholder: 'Your humor' %>
            <%= f.select :category, options_for_select(%w[ black dark psycho slapstick family-appropriate puns self-depreciating  nsfw satir awkward awesome]) %>
            <%= f.input :location %>
            <%# <%= f.boolean :availability %>
            <%= f.input :price %>
            <%= f.input :photo, as: :file %>
            <%= f.submit class: 'btn btn-flat' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
