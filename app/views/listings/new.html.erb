<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 class="font_listing">Create new humor offer</h3>
        <%= simple_form_for @listing do |f| %>
          <%= f.input :name, placeholder: 'Your humor'%>
          Select category: <%= f.select :category, options_for_select(%w[witty dark dry slapstick family puns self-depreciating toilet satire awkward cringe]) %>
          <p></p>
          <%= f.input :description, placeholder: 'What is your humor about'%>
          <%= f.input :location, placeholder: 'London' %>
          <%= f.input :availability %>
          <%= f.input :price %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
